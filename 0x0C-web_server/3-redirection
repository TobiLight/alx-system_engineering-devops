#!/usr/bin/env bash
# Configures Nginx server so that /redirect_me is redirecting to another page.

sudo apt-get update
sudo apt-get install -y nginx

echo "Hello World!" | sudo tee /var/www/html/index.html
redirect_url="server_name _;\n\trewrite ^\/redirect_me https:\/\/x.com/0xTobii permanent;"
sudo sed -i "s/server_name _;/$redirect_url/" /etc/nginx/sites-enabled/default

sudo service nginx restart